<% include ./partials/header %>

<div class="container">
<h2 style="text-align: center;">Adicionar Nova Máquina</h2>
<div style="width: 30%; min-width: 280px; margin: 25px auto;">

<form action="/maquinas" method="POST" enctype="multipart/form-data"> <!--enctype to allow files-->

    <div class="form-group">
        <input class="form-control" type="text" placeholder="Título" name="maquina[titulo]">
    </div>
    <div class="form-group">
        <label for="imagem">Imagem Principal</label>
        <input type="file" id="imagem" name="imagem" accept="image/*" required> <!-- image/* to accpt only image files -->
    </div>
    <div class="form-group">
        <input class="form-control" type="text" placeholder="Descrição" name="maquina[desc]">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Adicionar!</button>
    </div>

</form>

<a href="/">Voltar Atrás</a>
</div>
</div>

<% include ./partials/footer %>